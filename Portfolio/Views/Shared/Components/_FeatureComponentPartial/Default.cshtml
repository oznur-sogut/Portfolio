@model List<Feature>
<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://png.pngtree.com/thumb_back/fh260/background/20231103/pngtree-lively-and-colorful-background-with-watercolor-brush-strokes-image_13701373.png" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>
    @foreach(var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.FeatureTitle</h3>

                <h1>
                    @item.FeatureDescription
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projeler
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda Fazlası
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı in</span>
                    </a>
                </div>

            </div>

        </div> <!-- end home-content -->
    }

    <ul class="home-social">
        <li>
            <a href="https://www.linkedin.com/in/öznur-söğüt-7a1782248/"><i class="im im-facebook" aria-hidden="true"></i><span>Linkedin</span></a>
        </li>
        <li>
            <a href="https://x.com/oznur_sogut"><i class="im im-twitter" aria-hidden="true"></i><span>Twiiter</span></a>
        </li>
        <li>
            <a href="https://www.instagram.com/sogut.oznur/"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>
