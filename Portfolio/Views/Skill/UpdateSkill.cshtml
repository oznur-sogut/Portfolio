@model Skills
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">


				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="SkillsID" />
							<label>Programlama Dili & Teknoloji Adı</label>
							<input type="text" asp-for="SkillsTitle" class="form-control" />
							<br />
							<label>Beceri Yüzdesi</label>
							<input type="text" asp-for="Value" class="form-control" />
							<br />
							
						</form>

					</div>
				</div>
			</div>
		</div>
		<button class="btn btn-primary">Yeteneği Güncelle</button>

