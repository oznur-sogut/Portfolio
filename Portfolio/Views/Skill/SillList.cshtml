@model List<Skills>
@{
    ViewData["Title"] = "SillList";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenekler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler ile ilgili işlemleri aşağıdaki panelden yapablirsiniz.
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Beceri Yüzdesi</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
						@foreach (var item in Model)
						{
							<tr>
                                        <td>@item.SkillsID</td>
                                        <td>@item.SkillsTitle</td>
                                        <td>
                                            <span class="text-muted fw-bold"> @item.Value%</span>

                                            <div class="progress mb-2" style="height: 7px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="@item.Value%"></div>
                                            </div>
                                        </td>
                                        <td><a class="btn btn-outline-danger" href="/Skill/DeleteSkill/@item.SkillsID">Sil</a> </td>
                                        <td> <a class="btn btn-outline-success" href="/Skill/UpdateSkill/@item.SkillsID">Güncelle</a> </td>
						
							
									</tr>
				
						}
							</tbody>
							</table>

			</div>
		</div>
	</div>
		</div>
		<a href="/Skill/CreateSkill" class="btn btn-primary"> Yetenek Ekle </a>
	</div>
</div>
