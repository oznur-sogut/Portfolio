@model MyPortfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">


				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label> Proje Başlığı </label>
							<input type="text" asp-for="MyPortfolioTitle" class="form-control" />
							<br />
							<label>Alt Başlık</label>
							<input type="text" asp-for="MyPortfolioSubTitle" class="form-control" />
							<br />
							<label>Resim Yolu</label>
							<input type="title" class="form-control" asp-for="MyPortfolioImageUrl" />
							<br />
							<label>Proje Url</label>
							<input type="url" class="form-control" asp-for="MyPortfolioUrl" />
							<br />
							<label>Açıklama</label>
							<textarea rows="5" class="form-control" asp-for="MyPortfolioDescription"></textarea>
							<br />
							<button class="btn btn-primary">Proje Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
		</div>
		</div>
