@model List<Experience>
@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Layout/Index.cshtml";

		<div class="content">
			<div class="container-fluid">
				<h4 class="page-title">İş ve Proje Deneyimleri</h4>
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<div class="card-title">İş ve Proje Deneyimler Listesi</div>
							</div>
							<div class="card-body">
								<div class="card-sub">
									Deneyimler ile ilgili işlemleri aşağıdaki panelden yapablirsiniz.
								</div>
								<table class="table table-striped mt-3">
									<thead>
										<tr>
											<th scope="col">#</th>
											<th scope="col">Başlık</th>
											<th scope="col">Ünvan</th>
											<th scope="col">Tarih</th>
											<th scope="col">Sil</th>

											<th scope="col">Güncelle</th>
										</tr>
									</thead>
									<tbody>
									@foreach (var item in Model)
										{

											<tr>
												<td>@item.ExperienceID</td>
												<td>@item.ExperienceHead</td>
												<td>@item.ExperienceTitle</td>
												<td>@item.ExperienceDate</td>
												<td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
												<td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-success">Güncelle</a></td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
						<a href="/Experience/CreateExperience/" class="btn btn-primary"> Yeni Deneyim Ekle </a>

					</div>
				</div>
			</div>
		</div>
	
}