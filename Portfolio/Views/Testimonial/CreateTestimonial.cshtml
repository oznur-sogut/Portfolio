@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslarım</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referanslar Listesi</div>
                        <div class="card-body">
                            <form method="post">
                                <label>Ad Soyad </label>
                                <input type="text" asp-for="TestimonialNameSurname" class="form-control" />
                                <br />
                                <label>Ünvan</label>
                                <input type="text" asp-for="TestimonialTitle" class="form-control" />
                                <br />
                                <label>Resim Yolu</label>
                                <br/>
                                <input type="url" asp-for="TestimonialImageUrl" multiple accept="image/*" class="form-control">
                                
                                <br/>
                                <label>Açıklama</label>
                                <br/>
                                <input type="text" asp-for="TestimonialDescription" class="form-control"/>
                                <br/><br/>
                                <button class="btn btn-primary">Referans Ekle</button>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>